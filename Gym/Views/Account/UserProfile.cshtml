@model UserModel
@{
    Layout = "~/Views/Shared/_customerLayout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" />
<style>
    div.form-control {
        display: flex;
    }

    div.validationSummary {
        font-size: 1.5rem;
    }

    div.userProfileForm {
        width: 50%;
        margin: 50px 20px 20px 20px;
    }

    input.form-input {
        width: 70%;
        background-color: #eef4ff
    }

    .control-label {
        font-size: 1.2rem;
    }

    input.form-btn {
        text-align: center;
        width: 70%;
    }

    i#togglePassword {
        position: relative;
        left: 65%;
        top: -25px;
    }
</style>

<div class="background userProfileForm">
    <h3>User Profile</h3>
    @using (Html.BeginForm("userprofile", "account", routeValues: new { returnUrl = "" },
method: FormMethod.Post, antiforgery: null, htmlAttributes: new { @id = "frmLogin" }))
    {
        <input type="hidden" asp-for="Id" />
        <input asp-for="UserType" type="hidden" />
        <input asp-for="IsActive" type="hidden" />
        <div asp-validation-summary="All" class="text-danger validationSummary">
        </div>
        <div class="form-group">
            <label asp-for="UserName" class="control-label">User Name</label>
            <input asp-for="UserName" class="form-control form-input" />
        </div>
        <div class="form-group">
            <label asp-for="Password" class="control-label"></label>
            <input asp-for="Password" type="password" class="form-control form-input" />
            <i class="bi bi-eye-slash" id="togglePassword"></i>
        </div>

        <div class="form-group">
            <label asp-for="UserType" class="control-label">User Type</label>
            <input class="form-control form-input" value="User" readonly="readonly" />
        </div>
        <div class="form-group left-align">
            <label asp-for="IsActive" class="control-label">Is Active</label>
            <input type="checkbox" class="form-control form-input " disabled="disabled" checked="checked" />

        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-success form-btn" value="Update" />
        </div>

    }
</div>
<script>
    const togglePassword = document.querySelector('#togglePassword');
    const password = document.querySelector('#password');
    togglePassword.addEventListener('click', function (e) {
        // toggle the type attribute
        const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
        password.setAttribute('type', type);
        // toggle the eye / eye slash icon
        this.classList.toggle('bi-eye');
    });
</script>