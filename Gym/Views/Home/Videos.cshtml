@model List<Videos>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2> Upload Videos </h2>

<div class="background col-sm-10 col-md-5" style="margin:auto">

    <form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="VideoUpload">
        <div class="form-group">
            <label class="control-label" style="font-size: 1.8rem;">Description</label>
            <input type="text" class="form-control" name="txtDescription" id="txtDescription" value="" />
        </div>
        <div class="form-group">
            <label class="control-label" style="font-size: 1.8rem;">Select Video</label>
            <input type="file" class="form-control" name="fileupload" id="fileupload" accept="video/mp4" />
        </div>

        <div class="form-group" style="text-align:center">
            <input type="submit"  style="background-color:lightgrey;width:50%" value="Upload" />
        </div>
    </form>
</div>
<div style="width:100%;height:50px;float:left">
</div>
<div style="width:100%;float:left;">
    @foreach (var item in Model)
    {

        <div style="width:350px;float:left;margin:10px;">
            <video width="320" height="220" poster="placeholder.png" controls>
                <source src="~/admin/videos/@item.videopath#t=0.5" type="video/mp4">
            </video>
            <div style="padding:10px 5px;">
                <form method="post" asp-controller="Home" asp-action="DeleteVideo">
                    <span>
                        @item.videodescription
                        <input type="hidden" id="hdnImageId" name="hdnVideoId" value="@item.Id" />
                    </span>
                    <span>
                        <input type="submit" class="btn-danger btn-sm btnDelete" id="btnDelete_@item.Id" value="Delete" />
                    </span>
                </form>
            </div>
        </div>

    }
</div>