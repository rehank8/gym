@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2> Upload Videos </h2>

<form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="FileUpload">
    <div class="form-group">
        <div class="col-md-10">
            <p>Upload video using this form:</p>
            <input type="file" name="fileupload" id="fileupload" accept="video/*" />
        </div>
    </div>
    <br />
    <br />
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload" />
        </div>
    </div>
</form>