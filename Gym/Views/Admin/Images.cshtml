@model List<Images>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2> Upload Images </h2>
<div class="background col-sm-10 col-md-5" style="margin:auto">
    <form method="post" enctype="multipart/form-data" asp-controller="Admin" asp-action="ImageUpload">
        <div class="form-group">
            <label class="control-label" style="font-size: 1.8rem;">Description</label>
            <input type="text" class="form-control" name="txtDescription" id="txtDescription" value="" />
        </div>
        <div class="form-group">
            <label class="control-label" style="font-size: 1.8rem;">Select Video</label>
            <input type="file" class="form-control" name="fileupload" id="fileupload" accept="image/x-png,image/gif,image/jpeg" />
        </div>

        <div class="form-group" style="text-align:center">
            <input type="submit" style="background-color:lightgrey;width:50%" value="Upload" />
        </div>
    </form>
</div>
<div style="width:100%;height:50px;float:left">
</div>
<div style="width:100%;float:left">
    @foreach (var item in Model)
    {

        <div style="width:300px;float:left;margin:10px;">
            <img src="~/admin/images/@item.imagepath" class="img-rounded" alt="Cinque Terre"
                 width="250" height="200">
            <div style="padding:10px 5px;">
                <form method="post" asp-controller="Home" asp-action="DeleteImage">
                    <span>
                        @item.imagedescription
                        <input type="hidden" id="hdnImageId" name="hdnImageId" value="@item.Id" />
                    </span>
                    <span>
                        <input type="submit" class="btn-danger btn-sm btnDelete" id="btnDelete_@item.Id" value="Delete" />
                    </span>
                </form>
            </div>
        </div>

    }
</div>
