<link href="~/css/bootstrap.min.css" rel="stylesheet" />
<style>
	body {
		font-family: "Lato", sans-serif;
	}

	.sidenav {
		height: 100%;
		width: 200px;
		position: fixed;
		z-index: 1;
		top: 0;
		left: 0;
		background-color: #f1f1f1;
		overflow-x: hidden;
		padding-top: 20px;
	}

		.sidenav a {
			padding: 6px 6px 6px 32px;
			text-decoration: none;
			font-size: 25px;
			color: #818181;
			display: block;
		}

			.sidenav a:hover {
				color: #111;
			}

	.main {
		margin-left: 200px; /* Same as the width of the sidenav */
	}

	@@media screen and (max-height: 450px) {
		.sidenav {
			padding-top: 15px;
		}

			.sidenav a {
				font-size: 18px;
			}
	}
</style>
<div class="row">
	<div class="col-md-2">
		<div id="mySidenav" class="sidenav">
			@*<a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>*@
			<a href="~/Home/GetData">Appointments</a>
			<a href="~/Home/Images">Image</a>
			<a href="~/Home/Videos">Videos</a>
			<a href="~/Home/GetUsers">Users</a>
			<a href="~/Certifications/Index">Certification</a>
		</div>
	</div>

	<div class="col-md-10">
		@RenderBody()
	</div>
</div>

<header>

	<div class="text-center p-3" style="background-color:orangered ;position:absolute;top:0;width:100%; height:2.5rem">

		@*<h1>WELCOME ADMIN</h1>*@

	</div>
</header>

<footer class="bg-light text-center text-lg-start">
	<!-- Copyright -->

	<div class="text-center p-3" style="background-color:orangered ; position:absolute;bottom:0;width:100%; height:8.5rem">


	</div>
	<!-- Copyright -->
</footer>
